<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background for the ON state -->
    <item android:state_checked="true" >
        <shape android:shape="rectangle">
            <solid android:color="#00FF00"/> <!-- This is green -->
        </shape>
    </item>
    <!-- Background for the OFF state -->
    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <solid android:color="#808080"/> <!-- This is white -->
            <stroke android:width="1dp" android:color="#CCCCCC"/> <!-- Optional: grey border -->
        </shape>
    </item>
</selector>